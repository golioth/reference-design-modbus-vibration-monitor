#include "nrf_dk_common.dtsi"

/ {
	zephyr,user {
		rs485-8-click-en-gpios = <&mikrobus_header_1 1 GPIO_ACTIVE_HIGH>;
	};

	aliases {
		golioth-led = &led2;
	};
};

&mikrobus_serial {
	status = "okay";

	modbus0 {
		compatible = "zephyr,modbus-serial";
		status = "okay";
	};
};
